    </section>

    <section class="flex flex-col gap-5">
      <div class="grid md:grid-cols-2 gap-4">
        <Card
          title="Le Stud - Startup Studio"
          img={FinotorBg.src}
          body="The only all-in-one solution to manage your business accounting, finances and bank accounts"
          role="Freelance Fullstack Developer"
          tags={[
            "React",
            "Node",
            "PostgreSQL",
            "Sequelize",
            "Stripe",
            "Mixpanel",
            "i18n",
            "Joi",
          ]}
        />

        <Card
          title="ViaTransit"
          img={viaTransitBg.src}
          body="Migration Page router => AppRouter & firebase to Supabase"
          role="Freelance Frontend Developer"
          tags={[
            "Next",
            "React",
            "Tailwind",
            "firebase",
            "supabase",
            "mongodb",
            "CircleCi",
            "Docker",
          ]}
        />

        <Card
          title="GpLeads"
          img={GpLeadsBg.src}
          body="Lead generation for B2B companies"
          role="Freelance Fullstack Developer"
          tags={["React", "Node", "MySQL", "Zustand", "Stripe", "MapBox"]}
        />

        <Card
          title="SpotTogether"
          img={SpotTogetherBg.src}
          body="Organize events with your friends"
          role="Hobby Project"
          tags={["React", "Supabase", "MapBox"]}
        />
        <Card
          title="Forskal"
          img={ForskalScreenBg.src}
          body="Landing page for an agency"
          tags={["Html/Css", "Js"]}
          role="Freelance Frontend Developer"
          link="https://forskal.netlify.app"
        />
