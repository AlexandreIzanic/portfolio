---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import LinkedInLogo from "../assets/linkedInLogo.webp";
import GithubLogo from "../assets/githubLogo.png";
import FinotorScreen from "../assets/finotor.jpg";
import GpleadsScreen from "../assets/gpleads.jpg";
import AskformScreen from "../assets/askform.jpg";
import SpotTogetherScreen from "../assets/spotTogether.jpg";
import ForskalScreen from "../assets/forskal.jpg";

import ForskalScreenBg from "../assets/screenSaas/Forskal with bg.png";
import SpotTogetherBg from "../assets/screenSaas/SpotTogether with bg.png";
import FinotorBg from "../assets/screenSaas/FinotorBg.png";
import GpLeadsBg from "../assets/screenSaas/GpLeadsBg.png";
